<body class="background">
  <div class="container">
    <div class="retour-button m-4">
      <%= link_to "◀︎ Retour", livres_path %>
    </div>
    <h2 class="titre"><strong>Détails sur le livre</strong></h2>

    <p><strong>Réservations prévues :</strong></p>
      <% @reservations.each do |reservation| %>
        <% if reservation.livre_id == @livre.id %>
          <div class="card-resa">
            <p><strong><%= reservation.livre.titre %>  :</strong> <%= reservation.debut.strftime('%d-%m-%Y') %> au <%= reservation.fin.strftime('%d-%m-%Y') %>
            par <%= @user.email %></p>
            <%# script pour voir dans la console  %>
            <script>console.log("<%= "@user.id"  %> ");</script>
            <script>console.log("<%= @user.id %>");</script>
            <script>console.log("<%= "reservation.user_id"  %> ");</script>
            <script>console.log("<%= reservation.user_id %>");</script>

            <% if reservation.user_id == @user.id %>
              <%= link_to "Annuler la réservation", reservation_path(reservation), data: {turbo_method: :delete, turbo_confirm: "Etes-vous sûr(e)?"} %>
            <% end %>
          </div>
        <%end%>
      <% end %>
  </div>
</body>
